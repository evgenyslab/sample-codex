{
  "name": "sample-codex",
  "version": "1.0.0",
  "description": "Audio sample codex - unified application",
  "private": true,
  "scripts": {
    "install": "npm install --prefix frontend && pip install -r backend/requirements.txt",
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:backend": "cd backend && python run.py",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && python run.py",
    "start:prod": "npm run build && npm run start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && python -m pytest tests/",
    "test:frontend": "cd frontend && npm test"
  },
  "workspaces": [
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9"
  },
  "keywords": [
    "audio",
    "samples",
    "codex",
    "fastapi",
    "react"
  ],
  "author": "",
  "license": "MIT"
}
